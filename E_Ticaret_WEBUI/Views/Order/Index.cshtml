@using E_Ticaret_Entity.Entity
@model IEnumerable<E_Ticaret_Entity.Entity.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}
<style>
    th {
        font-size: larger;
    }

    td {
        font-size: large;
    }
</style>

<div class="container mb-5 mt-5">


    <table class="table table-bordered table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderState)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <td>
                Onayla
            </td>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @if (item.OrderState == EnumOrderState.Completed)
                    {
                        <span class="bg-success"> @Html.DisplayFor(modelItem => item.OrderState)</span>
                    }
                    else
                    {
                        <span class="bg-warning"> @Html.DisplayFor(modelItem => item.OrderState)</span>

                    }


                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.ActionLink("Onayla", "ConfirmOrder", new { id = item.Id }, new { @class = "btn btn-success" })

                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>