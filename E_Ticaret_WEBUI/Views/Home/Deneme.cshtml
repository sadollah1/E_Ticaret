
@{
    ViewBag.Title = "Deneme";
}

@using E_Ticaret_Entity.Entity
@model Product
<link href="https://fonts.googleapis.com/css?family=Hind:400,700" rel="stylesheet">


<!-- Slick -->

<link href="~/Content/slick.css" rel="stylesheet" />

<link href="~/Content/slick-theme.css" rel="stylesheet" />

<!-- nouislider -->

<link href="~/Content/nouislider.min.css" rel="stylesheet" />



<!-- Custom stlylesheet -->

<link href="~/Content/styledetails.css" rel="stylesheet" />

<div class="container mb-5 mt-5">
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <!--  Product Details -->
                
                    <div class="col-md-6 product product-details clearfix">
                        <div id="product-main-view">
                            <div class="product-view">
                                <img src="~/Upload/@Model.Image" alt="">
                            </div>

                        </div>
                    </div>

          
                <div class="col-md-6">
                    <div class="product-body">

                        <h2 class="product-name">@Model.Name</h2>
                        <h3 class="product-price">$@Model.Price</h3>
                        <div>
                            <div class="product-rating">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star-o empty"></i>
                            </div>
                            <a href="#">3 Review(s) / Add Review</a>
                        </div>
                        <p><strong>Availability:</strong> In Stock</p>
                        <p><strong>Brand:</strong> E-SHOP</p>
                        <p>
                            @Model.Description
                        </p>


                        <div class="product-btns">
                            <div class="qty-input">
                                <span class="text-uppercase">QTY: </span><br />
                                <input class="input" style="width:80px; height:40px;" value="1" type="number">
                            </div>
                            <button class="primary-btn add-to-cart"><i class="fa fa-shopping-cart"></i> Add to Cart</button>
                            <div class="pull-right">
                                <button class="main-btn icon-btn"><i class="fa fa-heart"></i></button>
                                <button class="main-btn icon-btn"><i class="fa fa-exchange"></i></button>
                                <button class="main-btn icon-btn"><i class="fa fa-share-alt"></i></button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-12">
                        <div class="bd-example bd-example-tabs">
                            <ul class="nav nav-tabs mb-3" id="pills-tab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="pills-description-tab" data-toggle="pill" href="#pills-description" role="tab" aria-controls="pills-description" aria-selected="true">Description</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="pills-payment-tab" data-toggle="pill" href="#pills-payment" role="tab" aria-controls="pills-payment" aria-selected="false">Payment Methods</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="pills-reviews-tab" data-toggle="pill" href="#pills-reviews" role="tab" aria-controls="pills-reviews" aria-selected="false">Reviews</a>
                                </li>
                            </ul>
                            <div class="tab-content" id="pills-tabContent">
                                <div class="tab-pane fade show active" id="pills-description" role="tabpanel" aria-labelledby="pills-description-tab">
                                    <p>@Model.Description</p>
                                </div>
                                <div class="tab-pane fade" id="pills-payment" role="tabpanel" aria-labelledby="pills-payment-tab">
                                    <p>Ödeme</p>
                                </div>
                                <div class="tab-pane fade" id="pills-reviews" role="tabpanel" aria-labelledby="pills-reviews-tab">Lorem ed. Sed elementum justo a lobortis porttitor.</div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /Product Details -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>










